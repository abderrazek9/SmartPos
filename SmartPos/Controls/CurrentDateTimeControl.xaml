<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                              xmlns:resx="clr-namespace:SmartPos.Resources.Strings;assembly=SmartPos"
             x:Class="SmartPos.Controls.CurrentDateTimeControl">
    <VerticalStackLayout>
        <Label 
               Text="{x:Static resx:AppResources.Label_Time}"
               FontSize="10"
               x:Name="dayTimeLabel"/>
        <Label 
              Text="{x:Static resx:AppResources.Label_Date}"
              FontSize="10"
              x:Name="dateLabel"/>
    </VerticalStackLayout>
</ContentView>
